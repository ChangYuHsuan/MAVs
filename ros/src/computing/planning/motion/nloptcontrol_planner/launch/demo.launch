<launch>

  <arg name="case_params_file" default="$(find system)/config/case/s1.yaml"/>
  <arg name="planner_params_file" default="$(find system)/config/planner/RTPP.yaml"/>
  <arg name="system_params_file" default="$(find system)/config/system/test_nloptcontrol_planner.yaml"/>

  <!--  ************** Global Parameters ***************  -->
  <rosparam command="load" file="$(arg case_params_file)" />
  <rosparam command="load" file="$(arg planner_params_file)" />
  <rosparam command="load" file="$(arg system_params_file)" />

  <!-- Obstacle Avoidance-->
  <node name="obstacle_avoidance" pkg="nloptcontrol_planner" type="obstacle_avoidance.jl" output="screen"/>

</launch>
